{
    "require-dev": {
        "pronamic/wp-coding-standards": "^1.0",
        "wp-cli/wp-cli": "dev-main",
        "wp-cli/wp-cli-bundle": "dev-main"
    },
    "scripts": {
        "build": [
            "rm -rf ./build/",
            "mkdir ./build/",
            "mkdir ./build/plugin/",
            "rsync --recursive --delete --exclude-from=.distignore ./ ./build/plugin/",
            "composer install --no-dev --prefer-dist --optimize-autoloader --working-dir=./build/plugin/",
            "vendor/bin/wp dist-archive ./build/plugin/ --plugin-dirname=pronamic-maps"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
